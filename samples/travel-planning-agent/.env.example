# =============================================================================
# Travel Planning Agent Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------

# Provider selection: "openai" or "anthropic"
LLM_PROVIDER=openai

# LLM Gateway URL (for vLLora or other proxies)
# This is where x-thread-id, x-run-id, x-label headers are sent
LLM_BASE_URL=http://localhost:9090/v1

# OpenAI API Key (use dummy-key for local gateway)
OPENAI_API_KEY=dummy-key

# For direct OpenAI API (without gateway):
# LLM_BASE_URL=https://api.openai.com/v1
# OPENAI_API_KEY=sk-your-openai-key

# Model selection
OPENAI_MODEL=gpt-4-turbo-preview

# For Anthropic (alternative):
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# ANTHROPIC_MODEL=claude-3-opus-20240229

# -----------------------------------------------------------------------------
# Search API Configuration (for real searches)
# -----------------------------------------------------------------------------

# Search provider: "tavily" or "serpapi"
SEARCH_PROVIDER=tavily

# Tavily API (recommended for AI-optimized search)
TAVILY_API_KEY=tvly-your-tavily-key

# SerpAPI (alternative - Google Search)
# SERPAPI_API_KEY=your-serpapi-key

# -----------------------------------------------------------------------------
# Travel API Configuration (optional - uses mocks if not set)
# -----------------------------------------------------------------------------

# Flight search API (e.g., Amadeus, Skyscanner)
# FLIGHT_API_KEY=your-flight-api-key

# Hotel search API (e.g., Booking.com, Hotels.com)
# HOTEL_API_KEY=your-hotel-api-key

# Weather API (e.g., OpenWeatherMap)
# WEATHER_API_KEY=your-weather-api-key

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------

# Maximum iterations for the agentic loop
MAX_ITERATIONS=20

# Enable parallel tool execution
ENABLE_PARALLEL_EXECUTION=true

# Request timeout in seconds
REQUEST_TIMEOUT=30

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Output directory for generated itineraries
OUTPUT_DIR=./outputs

# Enable mock mode (no real API calls)
MOCK_EXTERNAL_APIS=false

# Debug mode (verbose output)
DEBUG_MODE=false
